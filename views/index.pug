extends layout
block head
  link(rel="stylesheet" href="/stylesheets/index.css")
  script(src="/javascripts/create-session.js")

block content
  center
    h1 Studio
    if user
      p You're logged in as #{user.email}. Hi #{user.name}!
      p
        form.form.join(action="/join", method="post")
          input(type="text" placeholder="Enter Code")
          button Join
      p or&nbsp;
        a(href="#" id="create-session") Create a session
        form.form.create(action="" method="post")
          input(type="text" placeholder="Enter Topic")
          button Create

      p
        a(href="/auth/logout") Logout
    else
      p
        a(href="/auth/login") Login
