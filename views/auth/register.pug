extends ../layout

block content
  h1 Register
  p(style="color:red")
    ul(style="color:red")
      each message in messages
        li= message
  form(method="POST")
    input(type="text", name="name", placeholder="Name")
    input(type="email", name="email", placeholder="Email")
    input(type="password", name="password", placeholder="Password")
    br
    br

    button Register
